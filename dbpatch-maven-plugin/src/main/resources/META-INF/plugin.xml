        <parameter>
          <name>conf</name>
          <type>org.jsoftware.config.ConfigurationEntry</type>
          <required>false</required>
          <editable>true</editable>
          <description>Daatabase and patch configuration</description>
        </parameter>
        <parameter>
          <name>configFile</name>
          <type>java.io.File</type>
          <required>false</required>
          <editable>true</editable>
